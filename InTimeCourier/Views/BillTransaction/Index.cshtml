
@{
    ViewBag.Title = "Bill Transaction";
    var loggedInUser = (InTimeCourier.Models.AdminUser)Session["LoggedInUser"];
}

<h4>Bill Details</h4>
<hr />
<style>
    .ajaxLoader {
        outline-style: none;
        outline-color: invert;
        outline-width: 0px;
        width: 104px;
        height: 104px;
        position: absolute;
        z-index: 10000;
        background-image: url("../../Content/ajax-loader.gif");
    }
</style>

@if (TempData["Message"] != null)
{
    <div class="alert alert-success">@Convert.ToString(TempData["Message"])</div>
}
@if (TempData["PaymentMessage"] != null)
{
    <div class="alert alert-success">@Convert.ToString(TempData["PaymentMessage"])</div>
}
<div class="col-lg-12">
    @{Html.RenderAction("SearchBillTransaction", "BillTransaction");}
</div>
<div class="clearfix"></div>
<br />
<br />
<div class="col-lg-12">
    @{Html.RenderAction("BillTransactionList", "BillTransaction");}
</div>
<div id="SearchCourierlist" style="display:none">

</div>

<div class="modal fade" id="modalBillDetailsForm" tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header text-center">
                <h4 class="modal-title"><label id="lblHeader"> Bill Details</label></h4>
            </div>
            <div class="panel-body" id="divBillDetails">
                <div class="form-group col-lg-6">
                    <select id="ddlPartyNameTransaction" class="form-control"></select>
                </div>
                <div class="form-group col-lg-6">
                    <select id="ddlFinancialYearTransaction" class="form-control"></select>
                </div>
                <div class="form-group col-lg-6">
                    <input type="text" class="form-control" id="txtTransactionDate" placeholder="Transaction Date" />
                </div>
                <div class="col-lg-6">
                    <input type="text" class="form-control" id="txtCreditAmount" placeholder="Credit Amount" />
                </div>
                <div class="form-group col-lg-12">
                    <textarea id="txtNarration" class="form-control" placeholder="Transaction Narration"></textarea>
                </div>

                <div class="form-group col-lg-6">
                    <input type="button" onclick="saveTransaction()" class="btn btn-success" value="Save Transaction">
                </div>
            </div>
            <div class="modal-footer">

                <button type="button" class="btn btn-deep-orange" data-dismiss="modal" aria-label="Close">
                    Close
                </button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jspdf/1.3.2/jspdf.min.js"></script>
    <script>
        // Call on page load
        $(document).ready(function () {
            $('#txtTransactionDate').datepicker({
                        changeMonth: true,
                        changeYear: true
                    });
            $.ajax({
                url: "/BillTransaction/GetAllPartyAndFinancialYear",

                type: "GET",
                dataType: "json",
                success: function (data) {
                    $('#ddlPartyName').find('option').remove();
                    $('#ddlFinancialYear').find('option').remove();
                    $('#ddlPartyName').append($('<option></option>').val('').html('--Select Party--'));
                    $('#ddlFinancialYear').append($('<option></option>').val('').html('--Select Financial Year--'));

                    $(data?.parties).each(function (index, item) { // GETTING ERROR HERE
                        $('#ddlPartyName').append($('<option></option>').val(item.PartyId).html(item.PartyName));
                    });
                    $(data?.financialYears).each(function (index, item) { // GETTING ERROR HERE
                        $('#ddlFinancialYear').append($('<option></option>').val(item.FYearId).html(item.FYear));
                    });

                    // Popup Dropdowns
                    $('#ddlPartyNameTransaction').find('option').remove();
                    $('#ddlFinancialYearTransaction').find('option').remove();
                    $('#ddlPartyNameTransaction').append($('<option></option>').val('').html('--Select Party--'));
                    $('#ddlFinancialYearTransaction').append($('<option></option>').val('').html('--Select Financial Year--'));
                    $(data?.parties).each(function (index, item) { // GETTING ERROR HERE
                        $('#ddlPartyNameTransaction').append($('<option></option>').val(item.PartyId).html(item.PartyName));
                    });
                    $(data?.financialYears).each(function (index, item) { // GETTING ERROR HERE
                        $('#ddlFinancialYearTransaction').append($('<option></option>').val(item.FYearId).html(item.FYear));
                    });
                },
                error: function ajaxError(response) {
                    console.log(response.status + ' ' + response.statusText);
                }
            });
        })

        function SearchBillTransaction() {
            var partyId = $('#ddlPartyName').val();
            var fYearVal = $('#ddlFinancialYear').val();
            var fYear = $("#ddlFinancialYear option:selected").text(); //$('#ddlFinancialYear').text();
            if (partyId && fYearVal) {
                $.ajax({
                    url: "/BillTransaction/GetSearchBillTransactionResult",
                    data: { partyId: partyId, fYear: fYear },
                    type: "GET",
                    dataType: "json",
                    success: function (data) {

                        $("#divBillTransactionList").html(data);
                    }
                });
            } else {
                alert('Please select party name and financial year.');
                return;
            }
        }

        function saveTransaction() {
            var partyId = $('#ddlPartyName').val();
            var fYearVal = $('#ddlFinancialYear').val();
            var fYear = $("#ddlFinancialYear option:selected").text(); //$('#ddlFinancialYear').text();
            var transactionDate = $('#txtTransactionDate').val();
            var creditAmount = $('#txtCreditAmount').val();
            var narration = $('#txtNarration').val();
            $.ajax({
                url: '/BillTransaction/SaveTransaction',
                data: { partyId: partyId, financialYear: fYear, transactionDate: transactionDate, creditAmount: creditAmount, narration: narration },
                type: 'GET',
                success: function (data) {
                    alert(data?.message);
                },
                error: function (err) {
                    alert(err);
                }
            })
        }

        function switchcase(recordscount) {
            var hgt = '';
            if (recordscount == 1) {
                hgt = 530;
            }
            else if (recordscount == 2) {
                hgt = 510;
            }
            else {
                hgt = 550 - (((recordscount - 1) * 2) * 10);
            }
            return hgt;
        }
    </script>
}