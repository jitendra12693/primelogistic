@section Scripts {
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jspdf/1.3.2/jspdf.min.js"></script>
    <script>
            $(function () {
                $("#txtfromDate").datepicker({
                    changeMonth: true,
                    changeYear: true
                });


            });

            function OpenBillDetails(billId) {
                $.ajax({
                    url: 'AddBillDetails?id=' + billId,
                    dataType: 'html',
                    type: 'GET',
                    success: function (data) {
                        $('#divBillDetails').empty();
                        $('#divBillDetails').html(data);

                        $('#PeriodFrom').datepicker({
                            changeMonth: true,
                            changeYear: true
                        });
                        $('#BillDate').datepicker({
                            changeMonth: true,
                            changeYear: true
                        });
                        $('#PeriodTo').datepicker({
                            changeMonth: true,
                            changeYear: true
                        });
                    },
                    error: function (err) {
                        alert(err);
                    }
                })
            }

            // Call on page load
            $(document).ready(function () {
                $.ajax({
                    url: "/BillTransaction/GetAllPartyAndFinancialYear",

                    type: "GET",
                    dataType: "json",
                    success: function (data) {
                        $('#ddlPartyName').find('option').remove();
                        $('#ddlFinancialYear').find('option').remove();
                        $('#ddlPartyName').append($('<option></option>').val('').html('--Select Party--'));
                        $('#ddlFinancialYear').append($('<option></option>').val('').html('--Select Financial Year--'));

                        $(data?.parties).each(function (index, item) { // GETTING ERROR HERE
                            $('#ddlPartyName').append($('<option></option>').val(item.PartyId).html(item.PartyName));
                        });
                        $(data?.financialYears).each(function (index, item) { // GETTING ERROR HERE
                            $('#ddlFinancialYear').append($('<option></option>').val(item.FYearId).html(item.FYear));
                        });
                    },
                    error: function ajaxError(response) {
                        console.log(response.status + ' ' + response.statusText);
                    }
                });
            })

            function SearchBillTransaction() {
                var partyId = $('#ddlPartyName').val();
                var fYearVal = $('#ddlFinancialYear').val();
                var fYear = $("#ddlFinancialYear option:selected").text(); //$('#ddlFinancialYear').text();
                if (partyId && fYearVal) {
                    $.ajax({
                        url: "/BillTransaction/GetSearchBillTransactionResult",
                        data: { partyId: partyId, fYear: fYear },
                        type: "GET",
                        dataType: "json",
                        success: function (data) {

                            $("#divBillTransactionList").html(data);
                        }
                    });
                } else {
                    alert('Please select party name and financial year.');
                    return;
                }
            }

            function OpenPaymentDetails(billId) {
                $.ajax({
                    url: '/BillDetails/BillPayment',
                    type: 'GET',
                    datatype: 'HTML',
                    data: { id: billId },
                    success: function (data) {
                        $('#divBillDetails').empty();
                        $('#lblHeader').text("Bill Payment");

                        $("#divBillDetails").html(data);
                        $('#ChequeDate').datepicker({
                            changeMonth: true,
                            changeYear: true
                        });
                    }
                });
            }

            function deleteBillDetails(billId) {
                if (confirm('Are you sure you want to delete this Bill?')) {
                    $.ajax({
                        url: '/BillDetails/DeleteBillDetails',
                        data: { BillId: billId },
                        type: 'POST',
                        dataType: "json",
                        success: function (data) {
                            if (data.responseId == '1') {
                                alert('Bill Deleted Successfully');
                                SearchComplaint();
                            }
                            else {
                                alert('Something went wrong');
                                SearchComplaint();
                            }

                        },
                        error: function (error) {
                            alert(error.responseText);
                        }
                    });
                } else {
                    //alert('Cancelled');
                }
            }

